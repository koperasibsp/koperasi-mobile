<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="5dp"
  android:orientation="horizontal">


  <LinearLayout
    android:id="@+id/header_card"
    android:layout_below="@+id/layoutprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/cardHeader"
      android:columnCount="3"
      android:orientation="horizontal"
      android:background="@drawable/circularbordersolid"
      android:rowCount="4"
      android:paddingTop="10dp"
      android:paddingBottom="10dp">

      <ImageView
        android:id="@+id/imagePinjaman"
        android:layout_columnSpan="1"
        android:layout_gravity="top|center"
        android:layout_rowSpan="4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_launcher_round" />


      <TextView
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pinjaman"
        android:textSize="10dp"
        android:textColor="@color/blacktext" />

      <TextView
        android:id="@+id/loan_name"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pinjaman"
        android:textSize="12dp"
        android:textColor="@color/blacktext" />

      <TextView
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Kode Pinjaman"
        android:textSize="10dp"
        android:textColor="@color/blacktext" />

      <TextView
        android:id="@+id/deposit_number"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode Pinjaman"
        android:textSize="12dp"
        android:textColor="@color/blacktext" />

      <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nilai Pinjaman"
        android:textSize="10dp"
        android:textColor="@color/blacktext" />

      <TextView
        android:layout_marginTop="10dp"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Period Pinjaman"
        android:textSize="10dp"
        android:textColor="@color/blacktext" />

      <TextView
        android:layout_marginTop="10dp"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Status Pinjaman"
        android:textSize="10dp"
        android:textColor="@color/blacktext" />

      <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/value"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nilai pinjaman"
        android:textSize="12dp"
        android:textColor="@color/blacktext" />

      <TextView
        android:id="@+id/period"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="period pinjaman"
        android:textSize="12dp"
        android:textColor="@color/blacktext" />

      <TextView
        android:id="@+id/approval"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="status pinjaman"
        android:textSize="12dp"
        android:textColor="@color/blacktext" />

    </GridLayout>



  </LinearLayout>

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp">

  </androidx.cardview.widget.CardView>
</LinearLayout>
